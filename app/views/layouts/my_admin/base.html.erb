<!DOCTYPE html>
<html>
  <head>
    <title>Writefully</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'my_admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='my_admin <%= controller_name %> <%= action_name %>'>
    <%= render 'navbar' %>
    <%= yield :action_bar %>
    <div id="main" class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= render 'flash_messages' %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
