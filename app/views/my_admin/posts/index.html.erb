<%= content_for :action_bar do %>
  <div class="action_bar container-fluid">
    <div class="row">
      <div class="col-md-10">
        <ul class="nav nav-pills">
          <%= MyAdmin::PostsHelper.render_states(self) %>
        </ul>
      </div>
      <div class="col-md-2">
        <%= link_to "New post", new_my_admin_post_path, class: 'btn btn-success btn-block' %>
      </div>
    </div>
  </div>
<% end %>


<% @posts.each do |post| %>
  <%= render post %>
<% end %>

<%= paginate @posts %>