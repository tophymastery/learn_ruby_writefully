<%= div_for post do %>
  <div class="row">
    <div class="col-md-8">
      <h2><%= link_to post.title, my_admin_post_path(post) %></h2>
      <p><%= post.body %></p>
      <p>Comments(<%= post.comments.count %>)</p>
      <ul>
        <% post.tags.each do |tag| %>
          <li><%= tag.name %></li>
        <% end%>
      </ul>
    </div>
    <div class="col-md-3">
      <%= link_to "Edit", edit_my_admin_post_path(post), class: 'btn btn-primary' %>
      <%= link_to "Delete", edit_my_admin_post_path(post), method: :delete, class: 'btn btn-danger' %>
      <%= post.status %>
    </div>
  </div>
<% end %>