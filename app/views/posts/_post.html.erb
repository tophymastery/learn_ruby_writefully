<%= div_for post, class: 'col-md-8 col-md-offset-2' do %>
  <h2><%= link_to post.title, post_path(post) %></h2>
  <p><%= post.body %></p>
  <p>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= link_to "Destroy", post_path(post), method: :delete %>
  </p>
  <p>Comments(<%= post.comments.count %>)</p>
<% end %>